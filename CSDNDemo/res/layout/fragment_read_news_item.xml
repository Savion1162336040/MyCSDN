<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white" 
        android:padding="5dp"
        >

        <TextView
            android:id="@+id/fragment_read_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="12"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/fragment_read_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_read_item_title"
            android:layout_marginTop="10dp"
            android:text="12"
            android:textColor="@color/gray_text_color"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/fragment_read_item_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_read_item_time"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="1"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/fragment_read_item_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fragment_read_item_content"
            android:layout_marginTop="10dp" />
    </RelativeLayout>

</RelativeLayout>